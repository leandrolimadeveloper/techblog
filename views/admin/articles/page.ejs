<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs') %>

<body>
    <div class="container">
        <br>
        <% result.articles.rows.forEach(article => { %>
            <div class="card mt-3">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
        
        <% if(result.page > 2) { %>
            <a class="btn btn-info float-left mb-3" href="/articles/page/<%= result.page - 1 %>">Voltar</a>
        <% } else if(result.page == 2) { %>
            <a class="btn btn-info float-left mb-3" href="/">Voltar</a>
        <% } %>

        <% if(result.next) { %>
            <a class="btn btn-info float-right mb-3" href="/articles/page/<%= result.page + 1 %>">Pr√≥xima</a>
        <% } %>
        
    </div>
</body>

