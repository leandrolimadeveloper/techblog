<%- include ('./partials/header.ejs') %>
<%- include ('./partials/homenavbar.ejs') %>

<body>
    <div class="container">
        <br>
        <div class="jumbotron">
            <h1 class="display-4">TechBlog</h1>
            <p class="lead">Aqui você aprenderá tudo sobre programação e tecnologia.</p>
            <hr class="my-4">
            <p class="lead">
              <a class="btn btn-primary btn-lg" href="#" role="button">Explorar</a>
            </p>
        </div>

        <% articles.forEach(article => { %>
            <div class="card mt-3">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
       
        <a class="btn btn-info float-right mb-3" href="/articles/page/2">Próxima</a>
    </div>
</body>

